{
  "configMigration": true,
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":pinDevDependencies",
    ":dependencyDashboard"
  ],
  "packageRules": [
    {
      "groupName": "React",
      "matchPackageNames": ["@types/react", "@types/react-dom"],
      "matchPackagePrefixes": ["react"],
      "schedule": ["every weekend"]
    },
    {
      "groupName": "eslint",
      "matchPackageNames": ["@types/eslint", "babel-eslint"],
      "matchPackagePrefixes": ["@typescript-eslint/", "eslint"],
      "schedule": ["every weekend"]
    },
    {
      "groupName": "graphql",
      "matchPackagePrefixes": ["@graphql-codegen", "graphql"],
      "schedule": ["every weekend"]
    },
    {
      "groupName": "remark",
      "matchPackageNames": ["remark", "remark-gfm", "remark-html", "remark-rehype"],
      "matchPackagePrefixes": ["remark"],
      "schedule": ["every weekend"]
    },
    {
      "groupName": "rehype",
      "matchPackageNames": ["rehype-raw", "rehype-react", "rehype-stringify"],
      "matchPackagePrefixes": ["rehype"],
      "schedule": ["every weekend"]
    },
    {
      "groupName": "apollo",
      "matchPackageNames": ["@apollo/client", "@apollo/experimental-nextjs-app-support"],
      "matchPackagePrefixes": ["@apollo"],
      "schedule": ["every weekend"]
    }
  ]
}
