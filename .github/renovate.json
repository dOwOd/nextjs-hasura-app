{
  "configMigration": true,
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":pinDevDependencies",
    ":dependencyDashboard"
  ],
  "packageRules": [
    {
      "groupName": "eslint",
      "matchPackageNames": [
        "@types/eslint",
        "babel-eslint",
        "@typescript-eslint/{/,}**",
        "eslint{/,}**"
      ]
    },
    {
      "groupName": "graphql",
      "matchPackageNames": [
        "@graphql-codegen{/,}**",
        "graphql{/,}**"
      ]
    },
    {
      "groupName": "remark",
      "matchPackageNames": [
        "remark",
        "remark-gfm",
        "remark-html",
        "remark-rehype",
        "remark{/,}**"
      ]
    },
    {
      "groupName": "rehype",
      "matchPackageNames": [
        "rehype-raw",
        "rehype-react",
        "rehype-stringify",
        "rehype{/,}**"
      ]
    },
    {
      "groupName": "apollo",
      "matchPackageNames": [
        "@apollo/client",
        "@apollo/experimental-nextjs-app-support",
        "@apollo{/,}**"
      ]
    }
  ]
}
