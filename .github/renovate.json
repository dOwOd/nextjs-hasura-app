{
  "configMigration": true,
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":pinDevDependencies",
    ":dependencyDashboard",
    "schedule:weekly"
  ],
  "packageRules": [
    {
      "description": "Patch updates are auto-merged after CI passes",
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "groupName": "graphql",
      "matchPackageNames": [
        "@graphql-codegen{/,}**",
        "graphql{/,}**"
      ]
    },
    {
      "groupName": "remark",
      "matchPackageNames": [
        "remark{/,}**"
      ]
    },
    {
      "groupName": "rehype",
      "matchPackageNames": [
        "rehype{/,}**"
      ]
    },
    {
      "groupName": "apollo",
      "matchPackageNames": [
        "@apollo{/,}**"
      ]
    },
    {
      "groupName": "eslint",
      "matchPackageNames": [
        "eslint{/,}**",
        "eslint-config-{/,}**"
      ]
    },
    {
      "groupName": "react",
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ]
    }
  ]
}
